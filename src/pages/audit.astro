---
import Button from "../components/Button.astro";
import Eyebrow from "../components/Eyebrow.astro";
import Header from "../components/Header.astro";
import HeadingStack from "../components/HeadingStack.astro";
import StarWrap from "../components/StarWrap.astro";
import "../styles.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Websites4Dentists</title>
  </head>
  <body>
    <section class="hero">
      <Header buttonText="Get your free audit →" />
      <div class="container">
        <Eyebrow
          text="Attention: Dental practice owners"
          icon="/img/eyebrow.webp"
        />
        <HeadingStack
          heading="See Exactly Why Your Competitors Get 3X More Patients Than You"
          paragraph=""
        />
        <div style="text-align: center;">
          <p style="font-weight: 600; margin-bottom: 0.5rem">
            Free Custom Marketing Audit Reveals:
          </p>
          <ul style="list-style-position: inside; margin-block: 0;">
            <li>Why you're invisible when patients search "Dentist near me"</li>
            <li>The 3 things costing you 20-30 patients every month</li>
            <li>Strategies to outrank competitors in search results</li>
          </ul>
        </div>
        <div
          style="display: flex; flex-direction: column; gap: 1rem; align-items: center;"
        >
          <Button
            text="GET MY FREE AUDIT - TAKES 60 SECONDS →"
            href="#contact"
          />
          <div class="checkwrap">
            <p style="font-size: .875rem; font-weight: 500; opacity: 0.8;">
              ✓ No credit card required
            </p>
            <p style="font-size: .875rem; font-weight: 500; opacity: 0.8;">
              ✓ Results in 24 hours
            </p>
            <p style="font-size: .875rem; font-weight: 500; opacity: 0.8;">
              ✓ 100% confidential
            </p>
          </div>
        </div>
      </div>
    </section>
    <section>
      <div class="container"></div>
    </section>
  </body>
</html>

<style>
  .hero {
    background:
      linear-gradient(0deg, #0041ff 0%, #0041ff 100%),
      url(/img/hero.webp) lightgray 50% / cover no-repeat;
    background:
      linear-gradient(
        0deg,
        color(display-p3 0 0.25 1) 0%,
        color(display-p3 0 0.25 1) 100%
      ),
      url(/img/hero.webp) lightgray 50% / cover no-repeat;
    background-blend-mode: hard-light, normal;
    margin: 1rem;
    border-radius: 2rem;
    padding-top: 5rem;
    padding-bottom: 5rem;
    position: relative;
    color: white;
    & .container {
      display: flex;
      gap: 1.5rem;
      align-items: center;
      flex-direction: column;
    }
  }
  .checkwrap {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    align-items: center;
    margin-top: 0.5rem;
  }
  /* test comment */
</style>
